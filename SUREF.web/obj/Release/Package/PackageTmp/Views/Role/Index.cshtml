@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>Available Roles For Application</h2>
    @Html.ActionLink("Create Role", "Create", "Role")
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Role", new { roleId = item.Id }, null)  | 
                        @Html.ActionLink("Delete", "Delete", "Role", new { roleId = item.Id }, null)  
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>