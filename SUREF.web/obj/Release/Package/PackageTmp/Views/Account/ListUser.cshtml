@model IEnumerable<SUREF.Models.ListUserModel>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <h2>List of Users for Application</h2>
    @Html.ActionLink("Register new user", "Register", "Account")
    <table class="table table-hover">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserName
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Role
                    </td>
                    <td>
                        @if (item.UserName != "sysAdmin")
                        {
                            @Html.ActionLink("Edit", "Edit", "Account", new { userId = item.id }, null) @:|
                        @Html.ActionLink("Delete", "Delete", "Account", new { userId = item.id },null)
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>