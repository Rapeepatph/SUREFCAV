<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SUREF</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="app">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div>@Html.ActionLink("Surveillance Performance", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Landing", "Summary")</li>
                    <li>@Html.ActionLink("SSR/MRT", "Index", "Summary", routeValues: new { selectedDate = ViewBag.RecentlyDate, sensorid = 2 }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("ADS-B", "Index", "Summary", routeValues: new { selectedDate = ViewBag.RecentlyDate, sensorid = 1 }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink("History", "History", "Summary")</li>
                    <li>@Html.ActionLink("Search", "Index", "Search")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Admin Tools
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Role", "Index", "Role")</li>
                                <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                                <li>@Html.ActionLink("Manage", "ListUser", "Account")</li>
                            </ul>
                        </li>
                        
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
       </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RDAS</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/leaflet")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/highcharts")
    @RenderSection("scripts", required: false)
</body>
</html>
