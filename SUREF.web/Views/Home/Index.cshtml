@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <div class="col-md-12 text-center">
            <h1><b>SUREF</b></h1>
        </div>
        
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/img/plane-1448300.jpg" alt="Los Angeles" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/img/aircraft-123005.jpg" alt="Chicago" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/img/contrail-670296.jpg" alt="New york" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Getting summary</h2>
            <p>
                SUREF gives you a performance of radar. Many Topic in each flight that you can choose on the days.
            </p>
           
        </div>
        <div class="col-md-4">
            <h2>Get more contact</h2>
            <p>Get support by phone or email, or ask the question that you need to know.</p>
            <p><a class="btn btn-default" href="/Home/Contact">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Browse History</h2>
            <p>You can easily find a summary of probability history .</p>
            <p><a class="btn btn-default" href="/summary/history">Learn more &raquo;</a></p>
        </div>
    </div>
</div>
